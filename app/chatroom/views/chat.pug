extends chatbase

block content
	div
		div.col-sm-2.sidebar
			div.chat-header
				h3 Chat Rooms
				hr
			ul.list-group
				a(href="#" data-target="#create" data-toggle="modal").list-group-item
					h4 Create a Chat Room!
					p Chat up your friends!

				each room in rooms
					a(href="#").list-group-item
						h4.list-group-item-heading #{room.name}
						p.list-group-item-text Last sent message
		div.col-sm-10.mainbar
			div.menu
				div.name #{room ? room.name : "No room selected"} 
			ol.chat#messages
				li.other 
					p.msg weirdlkj
				li.self
					p.msg Hello! What the heck
				form
					input(id='m' autocomplete='off' type='text' placeholder='Type your message here!').textarea

	div.modal.fade#create(tabindex= "-1" role = "dialog")
		div.modal-dialog(role="document")
			div.modal-content
				div.modal-header
					button(type="button" data-dismiss="modal" aria-label="Close").close
					h4.modal-title Create a chat room!
				div.modal-body
					p Enter a friend's user ID below, and hit enter! If this user exists, you will both be placed in a chat room.
					label Username: 
					input(type="text" placeholder="Friend username").form-control
				div.modal-footer
					button(type="button" data-dismiss="modal").btn.btn-default Close
					button(type="button").btn.btn-primary Create room!